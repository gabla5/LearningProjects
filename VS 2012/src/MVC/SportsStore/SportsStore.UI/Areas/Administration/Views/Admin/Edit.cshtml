@model SportsStore.Domain.Entities.Product

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm(MVC.Administration.Admin.Edit(), FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(false)

    <fieldset>
        <legend>Product</legend>

        @Html.HiddenFor(model => model.ProductID)
        @Html.HiddenFor(model => model.ImageMimeType)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Category)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Category)
            @Html.ValidationMessageFor(model => model.Category)
        </div>

        <div class="editor-label">
            Image
        </div>
        <div class="editor-field">
            @{
                if (this.Model.ImageData == null)
                {
                    @:None
                }
                else
                {
                    <img width="150" height="150" src="@Url.Action(MVC.Product.GetImage(this.Model.ProductID))" />
                }
                <br />
                <div>
                    Upload image: <input type="file" name="image" id="image" />
                </div>
            }
            @Html.ValidationMessageFor(model => model.ImageData)
        </div>

        <p>
            <input type="submit" value="Save" />
            @Html.ActionLink("Cancel", MVC.Administration.Admin.Details(this.Model.ProductID))
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Products", MVC.Administration.Admin.List())
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
