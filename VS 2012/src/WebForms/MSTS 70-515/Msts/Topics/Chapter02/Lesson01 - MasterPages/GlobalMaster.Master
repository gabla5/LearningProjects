<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="GlobalMaster.master.cs" Inherits="Msts.Topics.Chapter02.Lesson01___MasterPages.GlobalMaster" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
    <asp:ContentPlaceHolder ID="head" runat="server">
    </asp:ContentPlaceHolder>
</head>
<body>
    <form id="form1" runat="server">
    <div>
        <asp:ScriptManager runat="server" ID="scriptManager" EnableCdn="false">
            <Scripts>
                <asp:ScriptReference Name="jquery" />
                <asp:ScriptReference Name="WebForms.js" Assembly="System.Web" />
                <asp:ScriptReference Name="WebUIValidation.js" Assembly="System.Web" />
            </Scripts>
        </asp:ScriptManager>
        <table class="master-global-table">
            <tr>
                <th class="master-header">
                    Header from global
                </th>
            </tr>
            <tr>
                <th class="master-header-actions">
                    <div>
                        <asp:Label runat="server" Text="Select your custom layout" AssociatedControlID="ddlLayouts"></asp:Label>
                        <asp:DropDownList runat="server" ID="ddlLayouts" AutoPostBack="true" CausesValidation="true" OnSelectedIndexChanged="ddlLayouts_SelectedIndexChanged">
                            <asp:ListItem Text="Global - Classic" Value="~/Topics/Chapter02/Lesson01 - MasterPages/ClassicMaster.Master" Selected="True" />
                            <asp:ListItem Text="Local - Modern" Value="~/Topics/Chapter02/Lesson01 - MasterPages/ModernMaster.Master" />
                        </asp:DropDownList>
                    </div>
                    <div>
                        <asp:Label runat="server" Text="Select your preferred theme" AssociatedControlID="ddlThemes"></asp:Label>
                        <asp:DropDownList runat="server" ID="ddlThemes" AutoPostBack="true" CausesValidation="true" OnSelectedIndexChanged="ddlThemes_SelectedIndexChanged">
                            <asp:ListItem Text="Blue" Selected="True" />
                            <asp:ListItem Text="Red" />
                            <asp:ListItem Text="Yellow" />
                        </asp:DropDownList>
                    </div>
                </th>
            </tr>
            <tr>
                <td class="master-content">
                    <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
        
                    </asp:ContentPlaceHolder>
                </td>
            </tr>
        </table>
    </div>
    </form>
</body>
</html>
